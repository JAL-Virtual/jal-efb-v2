{
  "compilerOptions": {
    /* Modern output for Next.js */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],

    /* Core */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* ESM + Next.js compatible */
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    /* Optional: better interop/diagnostics */
    "allowSyntheticDefaultImports": true,

    /* Next plugin */
    "plugins": [{ "name": "next" }],

    /* สำคัญ! ต้องมีสองบรรทัดนี้ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"]
    },

    /* Types for Node env (helpful for process.env, etc.) */
    "types": ["@types/node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
